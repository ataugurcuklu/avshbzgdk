---
const navItems = [
  { href: "/", text: "Ana Sayfa" },
  { href: "/hakkimizda", text: "Hakkımızda" },
  { href: "/blog", text: "Blog" },
  { href: "/iletisim", text: "İletişim" },
  { href: "/sss", text: "SSS" },
];
---

<header class="bg-law-primary shadow-sm fixed top-0 w-full z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <a
        href="/"
        class="text-2xl font-serif font-bold text-white flex items-center space-x-2"
      >
        <img
          src="/assets/ankarabarosu.png"
          alt="Ankara Barosu"
          class="h-16 w-16"
        />
        <span>Şahbaz & Gedik Avukatlık Bürosu</span>
      </a>
      <nav class="hidden md:flex space-x-8">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class="text-white hover:text-law-accent font-medium transition text-lg"
            >
              {item.text}
            </a>
          ))
        }
      </nav>
      <button
        type="button"
        class="md:hidden text-white hover:text-law-accent"
        id="mobile-menu-button"
        aria-label="Menu"
      >
        <svg
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <div
    class="hidden md:hidden bg-law-primary absolute right-0 w-32 mt-1 py-2 rounded-md shadow-lg"
    id="mobile-menu"
  >
    <div class="px-2 space-y-1">
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class="text-white hover:text-law-accent block px-3 py-2 text-base font-medium text-right"
          >
            {item.text}
          </a>
        ))
      }
    </div>
  </div>
</header>

<script>
  const button = document.getElementById("mobile-menu-button");
  const menu = document.getElementById("mobile-menu");

  button?.addEventListener("click", () => {
    menu?.classList.toggle("hidden");
  });
</script>
