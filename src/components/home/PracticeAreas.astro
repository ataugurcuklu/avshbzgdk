---
import {
  Users,
  FileText,
  Briefcase,
  UserCheck,
  ClipboardList,
  FileSignature,
  Landmark,
  Gavel,
  ShieldCheck,
  ScrollText,
  Handshake,
} from "lucide-preact";

export const practiceAreas = [
  {
    title: "Kıymetli Evrak Hukuku",
    description: "Kıymetli evrak işlemleri ve uyuşmazlıklarında uzman destek.",
    icon: ScrollText,
  },
  {
    title: "Sigorta Hukuku",
    description:
      "Sigorta sözleşmeleri ve tazminat talepleri konusunda uzmanlık.",
    icon: ShieldCheck,
  },
  {
    title: "İdare Hukuku",
    description: "İdari işlemler ve davalarda profesyonel hukuki danışmanlık.",
    icon: Landmark,
  },
  {
    title: "Miras Hukuku",
    description: "Miras paylaşımı ve miras davalarında hukuki destek.",
    icon: Users,
  },
  {
    title: "İş Hukuku",
    description: "İşçi-işveren ilişkileri ve iş davalarında uzmanlık.",
    icon: Briefcase,
  },
  {
    title: "Tüketici Hukuku",
    description: "Tüketici hakları ve uyuşmazlıklarında etkin çözüm.",
    icon: Handshake,
  },
  {
    title: "Ceza ve Ceza Muhakemesi Hukuku",
    description: "Ceza davaları ve savunma süreçlerinde uzmanlık.",
    icon: Gavel,
  },
  {
    title: "Gayrimenkul Hukuku",
    description:
      "Gayrimenkul alım-satım işlemleri ve uyuşmazlıklarında uzmanlık.",
    icon: Landmark,
  },
  {
    title: "Kira Hukuku",
    description: "Kira sözleşmeleri ve tahliye davalarında uzmanlık.",
    icon: FileText,
  },
  {
    title: "Aile Hukuku",
    description: "Boşanma, velayet ve nafaka davalarında profesyonel destek.",
    icon: Users,
  },
  {
    title: "Şirketler Hukuku",
    description:
      "Şirket kuruluşu, yönetimi ve ticari uyuşmazlıklarda uzmanlık.",
    icon: ClipboardList,
  },
  {
    title: "İcra ve İflas Hukuku",
    description: "İcra işlemleri ve iflas davalarında etkin hukuki çözüm.",
    icon: FileText,
  },
