---
import { Users, Building, House, Scale } from "lucide-preact";

const practiceAreas = [
  {
    title: "Şirket Hukuku",
    description: "Her boyuttaki işletmeler için rehberlik.",
    icon: Building,
  },
  {
    title: "Aile Hukuku",
    description: "Aile içi konularda hukuki destek ve danışmanlık.",
    icon: Users,
  },
  {
    title: "Ceza Savunması",
    description: "Ceza davaları için savunma stratejileri.",
    icon: Scale,
  },
  {
    title: "Gayrimenkul",
    description: "Gayrimenkul işlemleri ve anlaşmazlıkları için destek.",
    icon: House,
  },
];
---

<section class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2
        class="text-3xl md:text-4xl font-serif font-bold text-law-primary mb-4"
      >
        Hizmet Alanlarımız
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        İhtiyaçlarınıza özel kapsamlı hukuki hizmetler sunuyoruz.
      </p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {
        practiceAreas.map((area) => (
          <div class="bg-white px-2 py-6 rounded-lg text-center shadow-md hover:shadow-lg transition">
            <div class="text-primary justify-center flex items-center mx-auto mb-4">
              <area.icon class="w-12 h-12" />
            </div>
            <h3 class="text-2xl font-serif font-semibold text-law-primary my-2">
              {area.title}
            </h3>
            <p class="text-gray-600 text-base">{area.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
