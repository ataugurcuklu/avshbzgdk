---
import type { BlogPostPreview } from "../../types/blog";
import { slugify } from "../../utils/slugify";

interface Props {
  post: BlogPostPreview;
}

const { post } = Astro.props;
const slug = slugify(post.data.title);
---

<article
  class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-200"
>
  <a href={`/blog/${slug}/`} class="block">
    <img
      src={post.data.heroImage}
      alt={post.data.altText}
      class="w-full h-48 object-cover"
      loading="lazy"
    />
    <div class="p-6">
      <h2
        class="text-xl font-semibold text-law-primary mb-2 hover:text-law-accent transition-colors"
      >
        {post.data.title}
      </h2>
      <p class="text-law-secondary mb-4">
        {post.data.description}
      </p>
      <span
        class="text-law-secondary hover:text-law-accent text-lg font-semibold p-0"
      >
        Devamını Oku...
      </span>
    </div>
  </a>
</article>
